

<h1>Your Orders</h1>

<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Product</th>
      <th>Colour</th>
      <th>Description</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Order</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <form action="https://www.paypal.com/cgi-bin/webscr" method="post" target="_top">
    <% @orderitems.each do |orderitem| %>
      <tr>
        <td><%= orderitem.item_id %></td>
        <td><%= orderitem.product %></td>
        <td><%= orderitem.colour %></td>
        <td><%= orderitem.description %></td>
        <td><%= orderitem.quantity %></td>
        <td><%= (orderitem.price * orderitem.quantity)  %></td>
        <td><%= orderitem.order %></td>
       
        <td><%= link_to 'Delete Item', orderitem, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Add more items', :controller => :items %>
|

<input type="hidden" name="cmd" value="_xclick">
<input type="hidden" name="business" value="rodwardle-facilitator@icloud.com">
<input type="image" src="https://www.paypalobjects.com/en_US/i/btn/btn_buynowCC_LG.gif" border="0" name="submit" alt="PayPal - The safer, easier way to pay online!">
<img alt="" border="0" src="https://www.paypalobjects.com/en_US/i/scr/pixel.gif" width="1" height="1">
</form>



